[Unit]
Description=esion-srv
After=syslog.target
After=network.target
After=nginx.service

[Service]
Type=forking
PIDFile=/work/www/myunit/shared/tmp/pids/esion-srv.pid
WorkingDirectory=/home/rostislav/bin
RemainAfterExit=no
Restart=on-failure
RestartSec=5s

User=root
Group=root

Environment=RACK_ENV=production

OOMScoreAdjust=-1000

ExecStart=/home/rostislav/bin/esion-srv.sh
TimeoutSec=300

[Install]
WantedBy=multi-user.target
